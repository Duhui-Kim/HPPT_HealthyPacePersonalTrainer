package com.diet.controller;

import java.io.BufferedReader;
import java.io.InputStreamReader;
import java.net.URL;

import org.json.simple.JSONArray;
import org.json.simple.JSONObject;
import org.json.simple.parser.JSONParser;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.diet.model.dao.FoodDao;
import com.diet.model.dto.Food;

@RestController
@RequestMapping("/open")
public class FoodController {

	@Value("${food.api.key}")
	private String foodapikey;
	
	@Autowired
	private FoodDao foodDao;

	@GetMapping
	public void open() {

		StringBuilder response = new StringBuilder();

		try {
	        URL url = new URL("http://openapi.foodsafetykorea.go.kr/api/" + foodapikey + "/I2790/json/1/90608");
	        BufferedReader br = new BufferedReader(new InputStreamReader(url.openStream(), "UTF-8"));
	        String line;
	        while ((line = br.readLine()) != null) {
	            response.append(line);
	        }

	        System.out.println("Response: " + response.toString());

	        JSONParser jsonParser = new JSONParser();
	        JSONObject jsonObject = (JSONObject) jsonParser.parse(response.toString());

			JSONObject I2790 = (JSONObject) jsonObject.get("I2790");

			JSONObject subResult = (JSONObject) I2790.get("RESULT");
			JSONArray infoArr = (JSONArray) I2790.get("row");

			for (int i = 0; i < infoArr.size(); i++) {
				JSONObject tmp = (JSONObject) infoArr.get(i);
				Food food = new Food((String) tmp.get("NUM"), (String) tmp.get("DESC_KOR"), (String) tmp.get("SERVING_SIZE"),
				        (String) tmp.get("NUTR_CONT1"), (String) tmp.get("NUTR_CONT2"), (String) tmp.get("NUTR_CONT3"), (String) tmp.get("NUTR_CONT4"));
				foodDao.insertFood(food);
			}
		} catch (Exception e) {
		    System.err.println("An exception occurred:");
		    e.printStackTrace(System.err);
		}
	}
}
